{
  "name": "manager-pro",
  "version": "1.0.0",
  "description": "Aplicación de gestión de proyectos optimizada para móviles - PWA",
  "keywords": [
    "angular",
    "pwa",
    "gestión",
    "proyectos",
    "móvil"
  ],
  "author": "Manager Pro Team",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
            "build:prod": "ng build --configuration production",
        "build:github": "ng build --configuration github-pages",
        "build:dev": "ng build --configuration development",
        "deploy:github": "node deploy-github-pages.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "lint": "ng lint",
    "serve:ssr:manager": "node dist/manager/server/server.mjs",
    "serve:prod": "ng serve --configuration production",
    "analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/manager/browser/stats.json",
    "deploy:prepare": "npm run build:prod && npm run test",
    "pwa:test": "ng build --configuration production && npx lighthouse dist/manager/browser/index.html --output=html --output-path=./lighthouse-report.html"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/service-worker": "^20.1.0",
    "@angular/ssr": "^20.1.6",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "angular-cli-ghpages": "^2.0.3",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "iOS >= 12",
    "Android >= 8"
  ]
}
